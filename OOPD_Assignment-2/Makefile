# Name of the output executable
TARGET = ques1

# Compiler to use
CC = g++

# Compiler flags (C++11 or higher is recommended)
CFLAGS = -std=c++11 -Wall

# Source file
SRC = Ques-1.cpp

# Build target
$(TARGET): $(SRC)
	$(CC) $(CFLAGS) -o $(TARGET) $(SRC)

# Clean target to remove the executable
clean:
	rm -f $(TARGET)

